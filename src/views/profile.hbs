<h2>Perfil de Usuario</h2>
<p>Nombre: {{user.first_name}}</p>
<p>Apellido: {{user.last_name}}</p>
<p>Email: {{user.email}}</p>
<p>Edad: {{user.age}}</p>
<p>Rol actual: {{user.role}}</p>

<form action="/api/users/premium/{{user._id}}" method="POST">
    <button type="submit">
        {{#if (eq user.role 'premium')}}
            Cambiar a Usuario
        {{else}}
            Cambiar a Premium
        {{/if}}
    </button>
</form>

