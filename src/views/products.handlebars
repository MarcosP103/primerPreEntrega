{{#if isValid}}
<div>
    {{#each docs}}
    <div>
        <img src="{{this.thumbnails}}" alt="{{this.title}}" style="width: 200px;height: auto;">
        <h1><a href="/products/{{this._id}}">{{this.title}}</a></h1>
        <p>{{this.category}}</p>
        <h2>{{this.price}}</h2>
    </div>
    <br/>
    {{/each}}
</div>
<br />
<div>
    {{#if hasPrevPage}}
    <a href={{this.prevLink}}>
        << Anterior
    </a>
    {{/if}}
    $nbsp;
    {{this.page}}
    $nbsp;
    {{#if hasNextPage}}
    <a href={{this.nextLink}}>
        Siguiente >>
    </a>
    {{/if}}
</div>
{{else}}
<h1>No hay productos</h1>
{{/if}}
